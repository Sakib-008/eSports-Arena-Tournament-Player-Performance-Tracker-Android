<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/playerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Player"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/playerEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            app:layout_constraintTop_toBottomOf="@id/playerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/playerRole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Role"
            app:layout_constraintTop_toBottomOf="@id/playerEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/teamInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team: â€”"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintTop_toBottomOf="@id/playerRole"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/statsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stats"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintTop_toBottomOf="@id/teamInfo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/statsKills"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kills: 0"
            app:layout_constraintTop_toBottomOf="@id/statsHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/statsDeaths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Deaths: 0"
            app:layout_constraintTop_toBottomOf="@id/statsKills"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/statsAssists"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Assists: 0"
            app:layout_constraintTop_toBottomOf="@id/statsDeaths"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/statsKd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="K/D: 0"
            app:layout_constraintTop_toBottomOf="@id/statsAssists"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/statsWinRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Win Rate: 0%"
            app:layout_constraintTop_toBottomOf="@id/statsKd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/availabilityHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintTop_toBottomOf="@id/statsWinRate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/availabilitySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            app:layout_constraintTop_toBottomOf="@id/availabilityHeader"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/availabilityReasonLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Reason (optional)"
            app:layout_constraintTop_toBottomOf="@id/availabilitySwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/availabilityReasonInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/updateAvailabilityButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update Availability"
            app:layout_constraintTop_toBottomOf="@id/availabilityReasonLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/teamRosterHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Roster"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintTop_toBottomOf="@id/updateAvailabilityButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamRosterList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/teamRosterHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <ProgressBar
            android:id="@+id/dashboardLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/teamRosterList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dashboardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dashboardLoading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
